<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_10sdp">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="@null"
                android:text="Shreyansh"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/textsize" />
            <TextView
                android:id="@+id/tv_rd_req_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="@null"
                android:text="123454"
                android:visibility="gone"
                android:layout_below="@+id/tv_name"
                android:textColor="@color/colorBlack"
                android:textSize="13sp" />


          <!--  <ImageView
                android:id="@+id/iv_indicator"
                android:layout_width="@dimen/_8sdp"
                android:layout_height="@dimen/_8sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_toRightOf="@+id/tv_rd_req_code"
                android:src="@drawable/dot"
                android:layout_marginTop="@dimen/_10sdp"
                android:tint="@color/colorAccent" />-->

            <TextView
                android:id="@+id/tv_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_rd_req_code"
                android:layout_alignParentLeft="true"
                android:text="123454 - 098710"
                android:textColor="@color/border_color"
                android:textSize="@dimen/textsizesmall" />
            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_period"
                android:layout_alignParentLeft="true"
                android:text="Sick leave"
                android:textColor="@color/border_color"
                android:textSize="@dimen/textsizesmall" />
            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_alignParentRight="true"
                android:src="@drawable/arrowright"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/_4sdp" />
            <TextView
                android:id="@+id/tv_submit_rd_view"
                android:layout_width="@dimen/_75sdp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:background="@drawable/submit_button_bg_with_primary_color"
                android:gravity="center"
                android:padding="@dimen/_7sdp"
                android:text="View"
                android:textColor="@color/colorWhite"
                android:visibility="gone" />


        </RelativeLayout>
    </LinearLayout>

</LinearLayout>