<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal"
            android:weightSum="1"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/ll_short_leave_list_from_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_weight=".4"
                android:background="@drawable/layer1"
                android:orientation="horizontal"
                android:padding="@dimen/_5sdp">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:background="@drawable/calendar_holiday" />

                <TextView
                    android:id="@+id/tv_short_leave_list_from_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:hint="From Date" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_short_leave_list_to_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".4"
                android:background="@drawable/layer1"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/_10sdp"
                android:padding="@dimen/_5sdp">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:background="@drawable/calendar_holiday" />

                <TextView
                    android:id="@+id/tv_short_leave_list_to_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:hint="To Date" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_short_leave_list_search"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".2"
                android:gravity="center|end">

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/search" />
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/error_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="warn"
            android:textColor="@color/grey"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/header_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/colorPrimary"
        android:padding="@dimen/_5sdp"
        android:weightSum="1">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Req. No."
            android:textColor="@color/colorWhite"
            android:gravity="left"
            android:layout_weight=".3"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Req. Date"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:layout_weight=".3"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Status"
            android:gravity="right"
            android:paddingRight="@dimen/_15sdp"
            android:textColor="@color/colorWhite"
            android:layout_weight=".4"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ListView
            android:id="@+id/lv_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           android:layout_marginTop="8dp"
            android:divider="@drawable/divider"></ListView>

        <TextView
            android:id="@+id/error"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:text="No Data Found"
            android:textSize="@dimen/_25sdp"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>