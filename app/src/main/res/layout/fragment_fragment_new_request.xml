<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.FragmentNewRequest">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/_2sdp"
                android:background="@drawable/drop_down_style"
                android:textColorHint="@color/colorPrimary"
                app:met_floatingLabel="normal" />

            <LinearLayout
                android:id="@+id/lldate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:background="@drawable/layer1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="From Date"
                        android:textSize="@dimen/textsize" />

                    <TextView
                        android:id="@+id/tv_fromdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20/08/1996"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:padding="@dimen/_5sdp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/textsize" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lltodate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:background="@drawable/layer1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="To Date"
                        android:textSize="@dimen/textsize" />
                    <TextView
                        android:id="@+id/tv_todate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20/08/1996"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:padding="@dimen/_5sdp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/textsize" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:background="@drawable/layer1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="From Time"
                        android:textSize="@dimen/textsize" />

                    <TextView
                        android:id="@+id/tv_fromtime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20:20"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:padding="@dimen/_5sdp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/textsize" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lltotime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:background="@drawable/layer1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="To Time"
                        android:textSize="@dimen/textsize" />
                    <TextView
                        android:id="@+id/tv_totime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20:40"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:padding="@dimen/_5sdp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/textsize" />
                </LinearLayout>
            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/txt_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_place"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Place"
                    android:textColor="@color/colorPrimary"
                    android:visibility="gone"
                    android:padding="@dimen/_5sdp"
                    android:background="@drawable/lower_border"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp">

                <EditText
                    android:id="@+id/et_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Remark"
                    android:textColor="@color/colorPrimary"
                    android:padding="@dimen/_5sdp"
                    android:background="@drawable/lower_border"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp">

                <EditText
                    android:id="@+id/et_contactno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Contact Number"
                    android:padding="@dimen/_5sdp"
                    android:inputType="number"
                    android:maxLength="10"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/lower_border"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:focusable="false">

                <EditText
                    android:id="@+id/et_rm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/lower_border"
                    android:hint="RM:"
                    android:inputType="none"
                    android:editable="false"
                    android:padding="@dimen/_6sdp"
                    android:textColor="@color/colorPrimary" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:layout_marginTop="@dimen/_20sdp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/rounded_button" />
            <requestFocus />
        </LinearLayout>
    </ScrollView>
</LinearLayout>